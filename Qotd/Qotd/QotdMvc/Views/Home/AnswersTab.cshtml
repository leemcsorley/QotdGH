<div class="tabbable">
    <ul class="nav nav-pills">
        <li class="active">
            <a href="#rated" data-toggle="tab" class="ajax-tab" rel="@Url.Action("AnswersRated", "Home")">Most Rated</a>
        </li>
        <li>
            <a href="#recent" data-toggle="tab" class="ajax-tab" rel="@Url.Action("AnswersLatest", "Home")">Most Recent</a>
        </li>
        @if (ViewBag.IsAuthenticated && ViewBag.User != null)
        {
        <li>
            <a href="#followed" data-toggle="tab" class="ajax-tab" rel="@Url.Action("AnswersFollowed", "Home")">Your Feed</a>
        </li>
        }
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="rated">
            @Html.Action("AnswersRated", "Home")
        </div>
        <div class="tab-pane" id="recent">
                                        
        </div>
        <div class="tab-pane" id="followed">
                                        
        </div>
    </div>
</div>