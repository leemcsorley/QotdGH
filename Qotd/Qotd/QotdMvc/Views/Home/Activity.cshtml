@model Qotd.PresentationObjects.ActivityPO
<div class="social-content-container-sml">
    <!-- Side bar of post -->
    <div class="social-content-left-sml">
        <!-- Profile image -->
        <div>
            <img src="@Model.UserProfileImageUrl" alt="profile picture" style="width: 25px; height: 25px"/>
        </div>
    </div>
    <!-- Main section of post -->
    <div class="social-content-main-sml">
        <!-- Content -->
        <div>
            <span><b><a href="#">@Model.UserDisplayName</a></b></span>
            @{
                switch (Model.Activity.ActivityType)
                {
                    case Qotd.Entities.ActivityType.PostQuestion:
                        <text><span>&nbsp;posted a question <i class="icon-question-sign"></i>&nbsp;- &quot</span><span><a href="@Url.Action("Question", "Home", new { ajax = false, questionId = Model.Activity.QuestionId.Value })">@Model.Activity.Text</a></span><span>&quot</span>
                        </text>
                        break;
                    case Qotd.Entities.ActivityType.VoteAnswer:
                        <text><span>&nbsp;voted on answer <i class="icon-comments"></i>&nbsp;- &quot</span><span>@Model.Activity.Text</span><span>&quot</span>
                        </text>
                                                                                                            break;
                    case Qotd.Entities.ActivityType.PostComment:
                        <text><span>&nbsp;posted a comment <i class="icon-comment"></i>&nbsp;- &quot</span><span>@Model.Activity.Text</span><span>&quot</span>
                        </text>
                                                                                                            break;
                    case Qotd.Entities.ActivityType.PostAnswer:
                        <text>&nbsp;posted an answer
                        </text>
                                                                                                            break;
                }
            }
        </div> 
        <!-- Footer -->
        <div class="social-content-main-sml">
            <i class="icon-time"></i>&nbsp;<time class="timeago" datetime="@Model.Activity.Date.ToString("s")"></time>
        </div>
    </div>
</div>
