<div class="ajax-container">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3><i class="icon-plus color-red"></i>&nbsp;Create New Tag</h3>
    </div>
    <form class="ajax-form well form-horizontal" action="@Url.Action("NewTagSubmit", "Home")" method="get">
        <div class="modal-body">
            <fieldset>
                <div class="control-group">
                    <label class="control-label">Tag:</label>
                    <div class="controls">
                        <input type="text" class="input-xlarge" placeholder="Tag" name="tag" style="width: 440px"/>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Cancel</a>
            <input type="submit" class="btn btn-primary ajax-submit" value="Submit"/>
        </div>
    </form>
</div>